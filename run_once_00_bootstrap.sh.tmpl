#!/bin/bash
set -e


{{ if ne .chezmoi.os "darwin" }}
echo "Bootstrap only on MacOS. On Linux, please ensure required packages, including mise and starship, are installed manually, then run 'chezmoi apply'."
exit 0
{{ end }}


# 1. Install Xcode Command Line Tools (Only if missing)
if ! xcode-select -p >/dev/null 2>&1; then
    echo "Installing Xcode Command Line Tools..."
    xcode-select --install
else
    echo "Xcode Command Line Tools already installed."
fi

# 2. Install Homebrew (Only if missing)
if ! command -v brew >/dev/null 2>&1; then
    echo "Installing Homebrew..."
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
else
    echo "Homebrew already installed."
fi

# 3. Load Homebrew environment for the rest of this session
if [ -f "/opt/homebrew/bin/brew" ]; then
    eval "$(/opt/homebrew/bin/brew shellenv)"
elif [ -f "/usr/local/bin/brew" ]; then
    eval "$(/usr/local/bin/brew shellenv)"
fi